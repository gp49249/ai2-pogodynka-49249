{% extends 'base.html.twig' %}

{% block title %}Forecast{% endblock %}

{% block body %}
    <h1>Forecast</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ forecast.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ forecast.Date ? forecast.Date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Temperature</th>
                <td>{{ forecast.Temperature }}</td>
            </tr>
            <tr>
                <th>Rainfall</th>
                <td>{{ forecast.Rainfall }}</td>
            </tr>
            <tr>
                <th>Humidity</th>
                <td>{{ forecast.Humidity }}</td>
            </tr>
            <tr>
                <th>Wind</th>
                <td>{{ forecast.Wind }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_forecast_index') }}" class="btn btn-secondary" style="margin-right: 10px;">Back to list</a>

    <a href="{{ path('app_forecast_edit', {'id': forecast.id}) }}" class="btn btn-primary" style="margin-right: 10px;">Edit</a>

    {{ include('forecast/_delete_form.html.twig') }}
{% endblock %}
