{% extends 'base.html.twig' %}

{% block title %}City{% endblock %}

{% block body %}
    <h1>City</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>CityName</th>
                <th>CountryCode</th>
                <th>Latitude</th>
                <th>Longitude</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for city in cities %}
            <tr>
                <td>{{ city.id }}</td>
                <td>{{ city.CityName }}</td>
                <td>{{ city.CountryCode }}</td>
                <td>{{ city.Latitude }}</td>
                <td>{{ city.Longitude }}</td>
                <td>
                    <a href="{{ path('app_city_show', {'id': city.id}) }}" class="btn btn-info">Show</a>
                    <a href="{{ path('app_city_edit', {'id': city.id}) }}" class="btn btn-primary">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_city_new') }}" class="btn btn-primary">Create new</a>
{% endblock %}
